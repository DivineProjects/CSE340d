<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
   </ul>
  <% } 
%>
<div class="form-div">
    <div class="form-container">
        <form action="/account/login" method="post" id="loginForm">
            <label for="account_email">Email Address:</label>
            <input type="email" id="account_email" name="account_email" required placeholder="jonedoe@jane.com" value="<%= locals.account_email %>"><br>
            
            <!-- Password Input -->
            <label for="account_password">Password :</label>
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
            <input type="password" id="account_password" name="account_password" required placeholder="Enter your password" data-trail="account_password"
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
            
            <button type="submit">Login</button>
        </form>
    
        <p>Don't have an account? <a href="/account/register">Sign Up</a></p>
    </div>
</div>

