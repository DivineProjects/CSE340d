<h1><%- title %></h1>
<%- messages() %>

<div class="form-div">
    <div class="form-container">
        <form action="/login" method="post">
            <label for="account_email">Email Address:</label>
            <input type="email" id="account_email" name="account_email" required placeholder="jonedoe@jane.com"><br>
            
            <label for="account_password">Password:</label>
            <input type="password" id="account_password" name="account_password" required placeholder="Enter your password"><br>
            
            <button type="submit">Login</button>
        </form>
    
        <p>Don't have an account? <a href="/account/register">Sign Up</a></p>
    </div>
</div>

