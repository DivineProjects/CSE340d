<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <% if (error.msg !== "Invalid value") { %> 
            <li><%= error.msg %></li>
        <% } %>
    <%  }) %>
   </ul>
<% } %>
<p> <a href="/inv">Back to Inventory Management</a></p>

<div class="form-div">
    
    <div class="form-container">

        <form action="/inv/add-inventory" method="post" id="inventoryForm">
            <!-- Make -->
            <label for="inv_make">Make:</label>
            <input type="text" id="inv_make" name="inv_make" required pattern="[A-Za-z\s]+" placeholder="Enter the make" value="<%= locals.inv_make %>">

            <!-- Model -->
            <label for="inv_model">Model:</label>
            <input type="text" id="inv_model" name="inv_model" required pattern="[A-Za-z0-9\s]+" placeholder="Enter the model" value="<%= locals.inv_model %>">

            <!-- Year -->
            <label for="inv_year">Year:</label>
            <input type="text" id="inv_year" name="inv_year" required pattern="^\d{4}$" placeholder="2024" value="<%= locals.inv_year %>">

            <!-- Description -->
            <label for="inv_description" >Description:</label>
            <textarea id="inv_description" name="inv_description" required minlength="10" maxlength="100"  placeholder="Enter description (min 10 characters)" ></textarea>

            <!-- Image -->
            <label for="inv_image" >Image URL:</label>
            <input type="url" id="inv_image" name="inv_image" required placeholder="Enter the image URL" value="<%= locals.inv_image %>">

            <!-- Thumbnail -->
            <label for="inv_thumbnail" >Thumbnail URL:</label>
            <input type="url" id="inv_thumbnail" name="inv_thumbnail" required placeholder="Enter the thumbnail URL" value="<%= locals.inv_thumbnail %>" >

            <!-- Price -->
            <label for="inv_price" >Price:</label>
            <input type="number" id="inv_price" name="inv_price" required min="0" step="0.01" placeholder="Enter price" value="<%= locals.inv_price %>">

            <!-- Miles -->
            <label for="inv_miles" >Miles:</label>
            <input type="number" id="inv_miles" name="inv_miles" required min="0" placeholder="Enter miles" value="<%= locals.inv_miles %>">

            <!-- Color -->
            <label for="inv_color" >Color:</label>
            <input type="text" id="inv_color" name="inv_color" required pattern="[A-Za-z\s]+" placeholder="Enter color" value="<%= locals.inv_color %>">

            <!-- Classification ID -->
            <label for="classification_id" >Classification:</label>
            <%- classification %>
            <!-- <select name="classification_id" id="classification_id" required ><option value=''>Choose a Classification</option><option value="22">Bike</option><option value="9">Bike</option><option value="18">Biker</option><option value="23">Bikez</option><option value="20">Bikez</option><option value="14">Buscits</option><option value="1">Custom</option><option value="11">Food</option><option value="24">Food</option><option value="12">Fruit Salad</option><option value="15">Grapes fut</option><option value="16">Kombis</option><option value="10">Lorry</option><option value="13">Mango</option><option value="17">Mango</option><option value="19">Mangor</option><option value="5">Sedan</option><option value="2">Sport</option><option value="3">SUV</option><option value="4">Truck</option><option value="21">Veritus</option></select> -->
            <!-- Submit Button -->
            <button type="submit">Submit</button>
        </form>

        <p> <a href="/inv">Back to Inventory Management</a></p>

    </div>

</div>